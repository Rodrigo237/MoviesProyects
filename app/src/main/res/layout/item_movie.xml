<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="320dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp">

    <ImageView
        android:id="@+id/imageViewProgram"
        android:layout_width="156dp"
        android:layout_height="217dp"
        android:layout_marginStart="32dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <TextView
        android:id="@+id/tvTitleProgram"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewProgram"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageViewProgram"
        app:layout_constraintTop_toTopOf="@+id/imageViewProgram"
        app:layout_constraintVertical_bias="0.216">

    </TextView>

    <TextView
        android:id="@+id/textViewNetwork"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/tvTitleProgram"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tvTitleProgram"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleProgram" />

    <TextView
        android:id="@+id/textViewAirDate"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewProgram"
        app:layout_constraintStart_toStartOf="@+id/textViewNetwork"
        app:layout_constraintTop_toBottomOf="@+id/textViewNetwork"
        app:layout_constraintVertical_bias="0.147" />

    <TextView
        android:id="@+id/textViewAirTime"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/textViewNetwork"
        app:layout_constraintStart_toEndOf="@+id/textViewAirDate"
        app:layout_constraintTop_toBottomOf="@+id/textViewNetwork" />

</androidx.constraintlayout.widget.ConstraintLayout>